# Application Details
APP_NAME=Laravel
APP_ENV=production        # Set to 'production' for deployment
APP_KEY=base64:KtRfHlVH9Gcw7xEsMAjJBYco73YgpkTpUvXwNTMBt/Y=
APP_DEBUG=false           # Disable debugging in production
APP_TIMEZONE=UTC
APP_PORT=${PORT}
APP_URL=http://0.0.0.0:${PORT}

# Localization Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode Driver
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database # Uncomment if using database for maintenance mode

# Security and Hashing
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single          # Use 'single' for simplified logs in production
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error           # Reduce log verbosity in production

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql             # Match the service name in docker-compose.yml
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Caching Configuration
CACHE_STORE=database
CACHE_PREFIX=laravel_cache

# Broadcasting Configuration
BROADCAST_CONNECTION=log

# Filesystem Disk
FILESYSTEM_DISK=local

# Queue Driver
QUEUE_CONNECTION=database

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis          # Match the service name in docker-compose.yml
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit         # Match the service name in docker-compose.yml
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if used)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Scout Driver for Meilisearch
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_NO_ANALYTICS=false

# Docker Workspace User and Group IDs
WORKSPACE_PUID=1000
WORKSPACE_PGID=1000
